<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="connect.qaagility.com.myclass.about_us">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"/>

    <TextView android:text="@string/hello_world"
        android:layout_below="@+id/app_bar"
        android:id="@+id/titleTextView"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_below="@+id/titleTextView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/about_us_imageView"/>

    <Button
        android:layout_below="@+id/about_us_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about_us_buttom"
        android:text="Click Me"/>

    <ImageView
        android:layout_below="@+id/about_us_buttom"
        android:id="@+id/about_us_copy_imageVIew"
        android:layout_width="100dp"
        android:layout_height="100dp" />

</RelativeLayout>
