<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_parentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="7dp"
    android:layout_marginRight="15dp"
    android:elevation="10dp">

    <LinearLayout
        android:id="@+id/main_gallery_row"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        android:elevation="10dp">


        <ImageView
            android:id="@+id/parent_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_marginRight="2dp"
            android:layout_weight="2"
            android:elevation="15dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/secondary_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:elevation="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/parent_image" />

            <RelativeLayout
                android:id="@+id/terniaryImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:alpha="0.7"
                android:elevation="5dp"
                android:focusable="false"
                android:scaleType="fitXY">
                <!--android:background="@drawable/bg3"-->

                <ImageView
                    android:id="@+id/blurry_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.7"
                    android:scaleType="fitXY"
                    android:src="@drawable/blur01" />

                <TextView
                    android:id="@+id/number_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:text="12"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/downArrowImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/number_textView"
                    android:gravity="center"
                    android:src="@drawable/down_arrow" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/event_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_gallery_row"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Title Of Event"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-8dp" />

</RelativeLayout>