<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/nav_view_row_ImageView"
        android:layout_width="@dimen/image_dimensions"
        android:layout_height="@dimen/image_dimensions"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/image_Padding"
        android:paddingTop="@dimen/image_Padding"
        android:paddingBottom="@dimen/image_Padding"
        android:paddingRight="@dimen/image_Padding"
        android:src="@drawable/user_image" />

    <TextView
        android:id="@+id/nav_view_row_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="72dp"
        android:text="Dummy Text"
        android:textSize="14sp"
        android:textColor="#fff" />

</RelativeLayout>