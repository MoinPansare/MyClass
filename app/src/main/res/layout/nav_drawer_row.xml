<?xml version="1.0" encoding="utf-8"?><!--<org.lucasr.dspec.DesignSpecFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="match_parent"--><!--android:layout_height="match_parent"--><!--xmlns:app="http://schemas.android.com/apk/res-auto"--><!--app:designSpec="@raw/spec">-->

<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    ripple:rv_type="rectangle">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/fragment_Navigation_Drawer_Background_Color"
        android:clickable="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/row_elevation_color"
            android:elevation="3dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/nav_view_row_ImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/user_image"/>
            <TextView
                android:id="@+id/nav_view_row_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="24dp"
                android:text="Dummy Text"
                android:textColor="#fff"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>
</com.andexert.library.RippleView>


    <!--</org.lucasr.dspec.DesignSpecFrameLayout>-->
